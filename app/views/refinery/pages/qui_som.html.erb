<% #See https://github.com/kpumuk/meta-tags %>
<% #set_meta_tags description: "Pa artesa i ecologic Cooperativa La Fogaina" %>

<div class='row'>
  <div class='large-12 column'>
    <%= render '/refinery/content_page' %>
  </div>
</div>

<hr>

<% @videos = videos_in_home_page %>
<%= render "refinery/videos/videos_in_home" %>

<hr>

<% workers_slideshow = Refinery::ImageSlideshows::ImageSlideshow.includes(:image_slides).find_by_title("Workers Carrousel") %>
<% if workers_slideshow %> 

  <ul class="example-orbit" data-orbit data-options=";
                                       timer_speed: 4000;
                                       animation: 'fade';
                                       pause_on_hover: false;
                                       slide_number: false;">                                 
    <% workers_slideshow.image_slides.each do |image_slide| %>
        <%= link_to image_slide.link_url do %>

          <%= image_tag(image_slide.image.url, :alt => image_slide.title, 
                                               :title => image_slide.caption,
                                               :style => "margin: auto",
                                               :class => "slideworkers" ) if image_slide.image %>
        <% end %>  
    <% end %>
     
  </ul>

<% end %>


<hr>

<div class='row'>
  <div class='large-12 column'>
    <p> <%= link_to t('back_to_home'), root_path %> </p>
  </div>
</div>
