
<% main_slideshow = Refinery::ImageSlideshows::ImageSlideshow.includes(:image_slides).find_by_title('Home Page Slide Show') %>

<% if main_slideshow %> 
  <div class="row">
    <div class="large-12 columns">
      <ul class="example-orbit" data-orbit data-options=";
                                           timer_speed: 5000;
                                           pause_on_hover: false;">                                 
        <% main_slideshow.image_slides.each do |image_slide| %>
          <%= link_to image_slide.link_url do %>
            <%= image_tag image_slide.image.url, :alt => image_slide.title, 
                                                 :title => image_slide.caption,
                                                 :style => "margin: auto" %>
          <% end %>  
        <% end %>
         
      </ul>
    </div>
  </div>

  <hr>
<% end %> 

<%-# last_news_in_home_page is defined in app/helpers/refinery/views_helper.rb -%>
<% @item = last_news_in_home_page %>
<% if @item %>
  <div class="row">
    <div class="large-12 columns">

      <h2><%= @item.title %></h2>
      <section>
        <%= render "refinery/news/items/item" %>
      </section>

    </div>
  </div>
  <hr>
<% end %>

<div class="row">
  <div class="large-12 columns">
    <%= render '/refinery/content_page' %>
  </div>
</div>
